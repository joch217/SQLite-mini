<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/email_edit_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/email_edit_subject"
            android:imeOptions="actionNext"
            android:inputType="textEmailSubject" >
        </EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/email_edit_sender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="@string/email_edit_sender"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress" >
    </EditText>

    <EditText
        android:id="@+id/email_edit_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="@string/email_edit_preview"
        android:imeOptions="actionNext" >
    </EditText>

    <Button
        android:id="@+id/email_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_edit_confirm" >
    </Button>

</LinearLayout>